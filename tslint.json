{
  "extends": ["tslint-config-airbnb"],
  "jsRules": {},
  "rules": {
    "quotemark": {
      "options": ["double", "jsx-double", "avoid-escape", "avoid-template"]
    },
    "object-shorthand-properties-first": false,
    "ter-arrow-parens": [
      true,
      "always",
      {
        "requireForBlockBody": false
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "import-name": false,
    "max-line-length": [
      true,
      { "limit": 120, "ignore-pattern": "^import {(.*?)}" }
    ],
    "indent": false,
    "one-variable-per-declaration": [false],
    "align": false,
    "no-increment-decrement": false,
    "no-else-after-return": [true, "allow-else-if"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "ter-indent": false,
    "space-before-function-paren": [
      true,
      { "anonymous": "never", "named": "never", "asyncArrow": "always" }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  },
  "rulesDirectory": []
}
