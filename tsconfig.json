{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": ["src/**/*"]
}
